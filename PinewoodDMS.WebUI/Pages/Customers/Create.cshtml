@page
@model PinewoodDMS.WebUI.Pages.Customers.CreateModel
@{
    ViewData["Title"] = "Create New Customer";
}

<h2>Create New Customer</h2>

<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="NewCustomer.FirstName" class="control-label"></label>
        <input asp-for="NewCustomer.FirstName" class="form-control" />
        <span asp-validation-for="NewCustomer.FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewCustomer.LastName" class="control-label"></label>
        <input asp-for="NewCustomer.LastName" class="form-control" />
        <span asp-validation-for="NewCustomer.LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewCustomer.Email" class="control-label"></label>
        <input asp-for="NewCustomer.Email" class="form-control" />
        <span asp-validation-for="NewCustomer.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewCustomer.Telephone" class="control-label"></label>
        <input asp-for="NewCustomer.Telephone" class="form-control" />
        <span asp-validation-for="NewCustomer.Telephone" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewCustomer.HouseNumber" class="control-label"></label>
        <input asp-for="NewCustomer.HouseNumber" class="form-control" />
        <span asp-validation-for="NewCustomer.HouseNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewCustomer.AddressLine1" class="control-label"></label>
        <input asp-for="NewCustomer.AddressLine1" class="form-control" />
        <span asp-validation-for="NewCustomer.AddressLine1" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewCustomer.AddressLine2" class="control-label"></label>
        <input asp-for="NewCustomer.AddressLine2" class="form-control" />
        <span asp-validation-for="NewCustomer.AddressLine2" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewCustomer.City" class="control-label"></label>
        <input asp-for="NewCustomer.City" class="form-control" />
        <span asp-validation-for="NewCustomer.City" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewCustomer.PostalCode" class="control-label"></label>
        <input asp-for="NewCustomer.PostalCode" class="form-control" />
        <span asp-validation-for="NewCustomer.PostalCode" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NewCustomer.Country" class="control-label"></label>
        <input asp-for="NewCustomer.Country" class="form-control" />
        <span asp-validation-for="NewCustomer.Country" class="text-danger"></span>
    </div>

    <div class="mt-2">
        <div class="col-md-offset-2 col-md-5">
    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}